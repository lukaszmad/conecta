<div id="<%= dom_id customer %>">
  <p>
    <strong>Name:</strong>
    <%= customer.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= customer.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= customer.phone %>
  </p>

  <p>
    <strong>Company:</strong>
    <%= customer.company %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= customer.status %>
  </p>

  <p>
    <strong>User:</strong>
    <%= customer.user_id %>
