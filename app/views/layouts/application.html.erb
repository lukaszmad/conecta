<!DOCTYPE html>
<html>
  <head>
    <title>Conecta</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <%= link_to "Conecta", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <% if user_signed_in? %>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to t('nav.dashboard'), root_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to t('nav.customers'), customers_path, class: "nav-link" %>
              </li>
            </ul>
            <ul class="navbar-nav ms-auto">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                  <%= current_user.email %>
                </a>
                <div class="dropdown-menu">
                  <%= link_to t('nav.settings'), settings_path, class: "dropdown-item" %>
                  <%= link_to t('nav.logout'), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                </div>
              </li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="container mt-4">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>
      
      <%= yield %>
    </div>
  </body>
</html>
